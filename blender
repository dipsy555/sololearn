'code for additions 2 arguments in 1 cls'

class Juice:
    
    def __init__(self, name, capacity):
        self.name = name
        self.capacity = capacity

    def __str__(self):
        return (self.name + ' ('+str(self.capacity)+'L)')
    
    def __add__(name, capacity):
        return Juice(a.name + '&' + b.name, a.capacity + b.capacity)
        
        
a = Juice('Orange', 1.5)
b = Juice('Apple', 2.0)

print(a + b)
